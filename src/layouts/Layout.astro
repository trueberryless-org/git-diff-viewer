---
const { title = "Git Diff Viewer" } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <style>
      body {
        background: #0d0d0d;
        padding: 2rem;
        color: #f5f5f5;
        color-scheme: dark;
        font-family: monospace, monospace;
      }
      input,
      button {
        margin: 0.5rem 0;
        border: 1px solid #333;
        border-radius: 0.25rem;
        background: #1a1a1a;
        padding: 0.5rem;
        color: #f5f5f5;
      }
      button {
        cursor: pointer;
      }
    </style>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/diff2html/bundles/css/diff2html.min.css"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
